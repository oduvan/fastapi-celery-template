# Application
APP_NAME=FastAPI Basic Template
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# API
SECRET_KEY=changeme-secret-key-for-production

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True
WORKERS=1

# Database
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_db
POSTGRES_TEST_DB=fastapi_db_test

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_DB=1
CELERY_RESULT_DB=2

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
